<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="configUI.components.ComponentsVBoxController">
   <children>
      <BorderPane>
         <left>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addComponent" text="+ Add Component" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button fx:id="remButton" mnemonicParsing="false" onAction="#removeComponent" text="- Remove Component" BorderPane.alignment="CENTER" />
         </right>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </BorderPane>
      <ScrollPane fx:id="scrollPane" fitToWidth="true">
         <content>
            <Accordion fx:id="accordion" />
         </content>
      </ScrollPane>
   </children>
</VBox>
